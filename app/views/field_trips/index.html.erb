<p class="alert alert-info"><%= notice %></p>

<h1>Field Trips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @field_trips.each do |field_trip| %>
      <tr>
        <td><%= field_trip.name %></td>
        <td><%= link_to 'Show', field_trip %></td>
        <td><%= link_to 'Edit', edit_field_trip_path(field_trip) %></td>
        <td><%= link_to 'Destroy', field_trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Field Trip', new_field_trip_path %>
